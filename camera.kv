<MainWindow>:
	
	canvas.before:
	    Color:
	        rgba: 1, 1, 1, 1
	    Rectangle:
	        pos: self.pos
	        size: self.size

	GridLayout:
		id: camerawindow
		cols: 1
		pos_hint: {"top":1}
		size_hint: 1, 0.8

		canvas.before: 
	        Color:
	            rgba: 0, 0, 0, 1
	        Rectangle:
	            pos: self.pos
	            size: self.size

		Label:
			id: viewtext
			text: "View"

	FloatLayout:
		id: controlwindow
		pos_hint: {"bottom":1}
		size_hint: 1, 0.2

		canvas.before:
	        Color:
	            rgba: 0,0,0,0.5
	        Rectangle:
	            pos: self.pos
	            size: self.size

	    Button:
	    	id: backbtn
	    	pos_hint: {"left":1}
	    	size_hint: 0.3, 1
	    	text: "Back"
	    	background_color: (1,0,0,0.4) if backbtn.state=="normal" else (1,0,0,0.7)
	    	on_press: 
	    		root.ids.viewtext.text = "Back"
	    	on_release: 
	    		root.ids.viewtext.text = "View"

	    Button:
	    	id: shutterbtn
	    	pos_hint: {"center_x":0.5, "center_y":0.5}
	    	size: min(self.size),min(self.size)
	    	size_hint: None,None #This is neccessary
	    	background_color: 0,0,0,0

	    	canvas.before: 
	    		Color:
	    			rgba: 0,0,1,0.3
	    		Ellipse:
	    			size: self.size
	    			pos: self.pos
	    			
	    	text: "Capture"
	    	on_press: 
	    		root.ids.viewtext.text = "Click!"
	    	on_release: 
	    		root.ids.viewtext.text = "View"

	    Label:
	    	id: blank


	


		
			



	
